<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.napier.mobilecoursework.GenderPage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="59dp"
        android:layout_marginTop="45dp"
        android:text="Alternatively, you can set your own daily calorie intake:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/btnFemale"
        android:layout_centerHorizontal="true" />

    <Button
            android:id="@+id/btnFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="58dp"
        android:layout_below="@+id/txtGenderInfo"
        android:layout_alignStart="@+id/txtGenderInfo" />


        <Button
            android:id="@+id/btnMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Male"
            android:layout_alignBaseline="@+id/btnFemale"
            android:layout_alignBottom="@+id/btnFemale"
            android:layout_toEndOf="@+id/btnFemale"
            android:layout_marginStart="82dp" />

    <TextView
        android:id="@+id/txtGenderInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="Please select a gender. This will select a recommended daily calorie intake."
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtLimitInput"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="2"
        android:inputType="number" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignTop="@+id/txtLimitInput"
        android:layout_toEndOf="@+id/txtLimitInput"
        android:layout_marginStart="23dp" />

</RelativeLayout>
